{
  "manifest_version": 3,
  "name": "Demo Chrome Extension",
  "description": "Demo Chrome Extension",
  "version": "1.0",

  "action": {
   "default_icon": {
      "16": "assets/icons/start/icon-16.png",
      "32": "assets/icons/start/icon-32.png",
      "64": "assets/icons/start/icon-64.png",
      "128": "assets/icons/start/icon-128.png"
    },
   "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  }
}